	<link  rel="stylesheet" href="/css/font-awesome.css" />
	<div class="wrap">
		<div class="header">
			<div class="header_top">

				<div class="menu">
					<a class="toggleMenu" href="#"><img src="images/nav.png" alt="" /></a>
					<ul class="nav">
						<li class="active"><a href="my-account"><i><img src="images/user.png" alt="" /></i>My Account</a></li>
						<li><a href="buy-xdc"><i><img src="images/buy-xdc.png" alt="" /></i>Buy XDC</a></li>
						<li><a href="send-xdc"><i><img src="images/send-xdc.png" alt="" /></i>Send XDC</a></li>
